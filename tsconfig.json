{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "esnext",
        "types": [],
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "util/**/*.ts"
    ]
}